<Window x:Class="Final_Project_NET.ViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Final_Project_NET"
        mc:Ignorable="d"
        Title="ViewWindow" Height="275" Width="490">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Right" Margin="10, 0">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="0,0,0,5"/>
                </Style>
            </StackPanel.Resources>
            <TextBlock FontWeight="Bold" Margin="0,0,0,10"><Run Text="Detailed View"/></TextBlock>
            <Button x:Name="btnOkay" Click="OkayBinding_Click" Content="OK"/>
        </StackPanel>
        <StackPanel>
            <TextBlock x:Name ="DetailedView"  Margin="5"/>
        </StackPanel>
    </DockPanel>
</Window>
