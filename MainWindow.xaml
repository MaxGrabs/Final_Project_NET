            <TextBlock FontWeight="Bold" Margin="0,0,0,10"><Run Text="ListBox Selection"/></TextBlock>
            <Button x:Name="btnAddContact" Click="btnAddContact_Click" Content="Add"/>
            <Button x:Name="btnShowContact" Click="btnShowContact_Click" Content="View"/>
            <Button x:Name="btnEditContact" Click="btnEditContact_Click" Content="Edit"/>
